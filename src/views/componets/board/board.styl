.board
    position relative
    flex 1
    overflow-y: auto;
    overflow-x: auto;
    .cell-input
        position fixed
        border: 1px solid activeColor;
        z-index:10
        font-size: 15px
        resize: none;
        overflow: hidden
        &:focus
            outline-color activeColor

    .row-header, .col-header
        background: bgColor
    .row-header
        position: sticky;
        left:0

    resizable-content(cursor)
        position: absolute;
        display: inline-block;
        z-index:10;
        &:hover
            background: #409EFF
            opacity 0.6
            cursor cursor
    .hori-resizable-content
        right: -6px;
        top: 0;
        width: 12px;
        height: 100%;
        resizable-content(col-resize)

    .vert-resizable-content
        position: absolute;
        bottom:-6px
        left:0
        width: 100%;
        height: 12px
        resizable-content(ns-resize)
    axis()
        position absolute
        left: 0;
        top: 0;
        z-index: 10;
    // 水平线
    .horiAxis
        axis()
        width:100%
        border-top: 2px dashed activeColor;
    //垂直线
    .vertAxis
        height 100%
        border-left:2px dashed activeColor;
        axis()
    .cell
        height 100%
        box-sizing: border-box
        position relative
        border: 1px solid transparentColor;
        word-break: break-all;
        &:hover
            border-color: activeColor;
    .table-body
        td
            border: 1px solid borderColor;
            height: 40px;
            vertical-align: middle;
            text-align: center;
            position relative
            word-break: break-all;
            box-sizing border-box
        tr:first-child td
            border-top 0
    .table-header
        position: sticky;
        top:0
        z-index 2
        th
            border  1px solid borderColor;
            border-top 0
            height: 40px;
            vertical-align: middle;
            text-align: center;
            position relative
            word-break: break-all;
            box-sizing border-box

