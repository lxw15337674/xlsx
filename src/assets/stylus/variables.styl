//主色
themeColor = #47A2ff
//悬停颜色
deepBlueColor = #3088e0
//透明色
transparentColor = rgba(0, 0, 0, 0)
//按钮颜色
activeColor = #4FA0F1
//通用灰色
bgColor = #f8f8f8
// 边框色
borderColor = rgba(0,0,0,0.1)

/*清除textarea默认样式*/
textarea
  resize: none;
  width: 100%;
  height: 100%;
  border: 0;
  font-size: 15px
  overflow hidden
  &:focus
    outline-color transparentColor
  &:disabled
    background transparentColor

// 可伸缩区域样式
resizable-content(cursor)
  position: absolute;
  display: inline-block;
  z-index:10;
  &:hover
    background: #409EFF
    opacity 0.6
    cursor cursor

